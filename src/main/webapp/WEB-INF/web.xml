<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">
  <display-name>Archetype Created Web Application</display-name>

 <welcome-file-list>
   <welcome-file>/login.jsp</welcome-file>
 </welcome-file-list>
  <servlet>
    <servlet-name>HelloServlet</servlet-name>
    <servlet-class>main.controllers.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>main.controllers.LoginServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>BudgetOperationsServlet</servlet-name>
        <servlet-class>main.controllers.BudgetOperationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>main.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>main.controllers.RegistrationServlet</servlet-class>
    </servlet>

    <filter>
        <filter-name>userFilter</filter-name>
        <filter-class>main.controllers.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/listBudgets</url-pattern>
     </filter-mapping>

    <filter-mapping>
        <filter-name>userFilter</filter-name>
        <url-pattern>/BudgetOperationsForm</url-pattern>
    </filter-mapping>

  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BudgetOperationsServlet</servlet-name>
        <url-pattern>/listBudgets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BudgetOperationsServlet</servlet-name>
        <url-pattern>/BudgetOperationsForm</url-pattern>
    </servlet-mapping>

</web-app>
